<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/home_top"
        android:layout_width="116dp"
        android:layout_height="121dp"
        android:layout_margin="3dp"
        android:background="#c78f2c"
        android:minHeight="121dp"
        android:minWidth="116dp"
        android:padding="@dimen/item_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white_frame"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/textStyle"
                android:text="APPLICATION"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_middle_size" />

            <TextView
                style="@style/textStyle"
                android:text="STYLE"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_middle_size" />

            <TextView
                style="@style/textStyle"
                android:layout_marginTop="@dimen/item_horizontal_margin"
                android:text="应用风格"
                android:textSize="@dimen/text_middle_size" />
        </LinearLayout>
    </FrameLayout>
</layout>